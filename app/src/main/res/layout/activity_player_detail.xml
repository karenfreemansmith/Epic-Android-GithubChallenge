<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.karenfreemansmith.githubchallenge.ui.PlayerDetailActivity"
    android:background="@drawable/battle">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player Name"
        android:textColor="@color/colorSecondaryText"
        android:textSize="36sp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:background="#80000000"
        android:paddingTop="120dp"
        android:paddingBottom="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View on Github"
        android:id="@+id/buttonGithub"
        android:layout_above="@+id/buttonSelectPlayer"
        android:layout_centerHorizontal="true"
        android:background="#de333333"
        android:textColor="@color/colorTextIcons"
        android:textSize="20sp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Player"
        android:id="@+id/buttonSelectPlayer"
        android:layout_above="@+id/buttonSavePlayer"
        android:layout_centerHorizontal="true"
        android:background="#de333333"
        android:textColor="@color/colorTextIcons"
        android:textSize="20sp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save to Favorites"
        android:id="@+id/buttonSavePlayer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#de333333"
        android:textColor="@color/colorTextIcons"
        android:textSize="20sp"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/playerImageView"
        android:src="@drawable/tyler"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
