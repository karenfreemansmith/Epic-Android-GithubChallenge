<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.karenfreemansmith.githubchallenge.ui.BattleResultsActivity"
    android:background="@drawable/battle">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Battle Results!"
        android:textColor="@color/colorSecondaryText"
        android:textSize="36sp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:background="#80000000"
        android:paddingTop="100dp"
        android:paddingBottom="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:id="@+id/buttonPlayAgain"
        android:layout_above="@+id/buttonLogout"
        android:layout_centerHorizontal="true"
        android:background="#de333333"
        android:textColor="@color/colorTextIcons"
        android:textSize="20sp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/buttonLogout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#de333333"
        android:textColor="@color/colorTextIcons"
        android:textSize="20sp"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/john"
        android:id="@+id/winnerImageView"
        android:layout_above="@+id/buttonPlayAgain"
        android:layout_below="@+id/titleTextView"
        android:layout_marginBottom="10dp"
        android:background="@color/colorAccent"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_centerInParent="true"
        android:padding="5dp" />
</RelativeLayout>
