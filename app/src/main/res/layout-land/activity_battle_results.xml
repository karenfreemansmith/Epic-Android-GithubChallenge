<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.karenfreemansmith.githubchallenge.ui.BattleResultsActivity"
    android:background="@drawable/battle"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Battle Results!"
            android:textColor="@color/colorSecondaryText"
            android:textSize="36sp"
            android:layout_marginBottom="10dp"
            android:background="#80000000"
            android:paddingTop="80dp"
            android:paddingBottom="80dp"
            android:paddingLeft="150dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/john"
            android:id="@+id/winnerImageView"
            android:padding="10dp"
            android:layout_weight="50"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/titleTextView"
            android:background="@color/colorAccent" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play Again"
            android:id="@+id/buttonPlayAgain"
            android:layout_above="@+id/buttonLogout"
            android:layout_centerHorizontal="true"
            android:background="#de333333"
            android:textColor="@color/colorTextIcons"
            android:textSize="20sp"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/buttonLogout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#de333333"
            android:textColor="@color/colorTextIcons"
            android:textSize="20sp"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

</LinearLayout>